<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.financeflow">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceFlow"
        tools:targetApi="31">

        <!-- SplashActivity (стартова активність) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinanceFlow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity (активність реєстрації) -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.FinanceFlow"
            android:windowSoftInputMode="adjustResize" />

        <!-- HomeActivity (активність домашнього екрану) -->
        <activity android:name=".HomeActivity" />

        <!-- StatisticsActivity -->
        <activity android:name=".StatisticsActivity" />

        <!-- AIChatActivity -->
        <activity android:name=".AIChatActivity" />

        <!-- EmailVerificationActivity -->
        <activity android:name=".EmailVerificationActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".SettingsActivity" />

        <!-- ResetPasswordActivity з deep link -->
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.FinanceFlow">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="928086273612.firebaseapp.com"
                    android:pathPrefix="/__/auth/action" />
            </intent-filter>
        </activity>

    </application>

</manifest>